<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <!--side bar-->
    <div class="col-md-3">
      <%= render 'info', user: @user %>
      <%= render 'books/newbook', book: @book %>
    </div>
    <!--main-->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %></td>
              <td><%= user.name %></td>
              <td>フォロー数：<%= user.following_users.count %></td>
              <td>フォロワー数：<%= user.followed_users.count %></td>
              <td><% unless current_user == user %>
                    <% if current_user.following?(user) %>
                      <%= link_to "フォロー外す", relationship_path(user), method: :delete %>
                    <% else %>
                      <%= link_to "フォローする", relationships_path(user), method: :post %>
                    <% end %>
                  <% end %>
              </td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>