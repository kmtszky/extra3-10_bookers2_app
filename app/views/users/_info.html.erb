<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th>follows</th>
      <th><%= user.following_users.count %></th>
    </tr>
    <tr>
      <th>follower</th>
      <th><%= user.followed_users.count %></th>
    </tr>
  </tbody>
</table>

<div class="row">
  <% if current_user == user %>
    <%= link_to edit_user_path(user.id), class: "fas fa-user-cog btn btn-outline-secondary btn-block" do %>
    <% end %>
  <% else %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", relationship_path(user), method: :delete, class: "btn btn-info" %>
    <% else %>
      <%= link_to "フォローする", relationships_path(user), method: :post, class: "btn btn-success" %>
    <% end %>
  <% end %>
</div>