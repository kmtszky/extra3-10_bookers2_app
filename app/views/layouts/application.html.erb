<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-2">
        <div class="container">
          <%= link_to "Bookers", "/", class: "navbar-brand" %>
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to user_path(current_user.id), class: "fas fa-home nav-link text-light" do %> Home<% end %>
              </li>
              <li class="nav-item">
                <%= link_to users_path, class: "fas fa-users nav-link text-light" do %> Users<% end %>
              </li>
              <li class="nav-item">
                <%= link_to books_path, class: "fas fa-book-open nav-link text-light" do %> Books<% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete, class: "fas fa-sign-out-alt nav-link text-light" do %> logout<% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "/", class: "fas fa-home nav-link text-light" do %> Home<% end %>
              </li>
              <li class="nav-item">
                <%= link_to home_about_path, class: "fas fa-link nav-link text-light" do %> About<% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_registration_path, class: "fas fa-user-plus nav-link text-light" do %> sign up<% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_session_path, class: "fas fa-sign-in-alt nav-link text-light" do %> login<% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>

      <div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-md-3">
          </div>
          <div class="col-md-8 offset-md-1">
            <%= render 'searchs/search' %>
          </div>
        </div>
      </div>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>
