<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", relationship_path(user), method: :delete, class: "btn btn-info btn-sm" do |f| %>
  <% else %>
    <%= link_to "フォローする", relationships_path(user), class: "btn btn-success btn-sm" do |f| %>
  <% end %>
<% end %>