<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <%= render 'layouts/error.messages', validation: @book %>
  <div class="row">
    <!--side bar-->
    <%= render 'layouts/sidebar', user: @user, book: @book_new %>
    <!--main-->
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <td><%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %><br>
                <%= @user.name %>
              <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger btn-sm" %></td>
          <% else %>
            <td colspan="2"></td>
          <% end %>
        </tbody>
      </table>
      <h3>Comments</h3>
      <div class="comments">
        <table class="table">
          <tbody>
            <% @book.comments.each do |comment| %>
            <tr>
              <td rowspan="2"><%= attachment_image_tag comment.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpb" %></td>
              <td><%= comment.user.name %>  <%= comment.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <td><%= comment.comment %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="new comments">
        <%= form_with(model: [@book, @comment], local: true) do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, rows: '3', placeholder: "commentS here!", class: "form-control" %>
          </div>
          <div class="actions">
            <%= f.submit 'Post comments', class: "btn btn-warning btn-sm text-light" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>