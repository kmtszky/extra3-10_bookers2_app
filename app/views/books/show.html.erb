<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <%= render 'layouts/error.messages', validation: @book %>
  <div class="row">
    <!--side bar-->
    <%= render 'layouts/sidebar', user: @user, book: @book_new %>
    <!--main-->
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <td><%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %><br>
                <%= @user.name %>
              <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <td><%= link_to book_path(@book.id, anchor: 'new_comment'), class: "far fa-comment" do %>
              <% end %></td>
          <td><% if @book.favorited_by?(current_user) %>
                <%= link_to book_favorites_path(@book), method: :delete, class: "fas fa-heart text-danger" do %>
                  <%= @book.favorites.count %><% end %>
              <% else %>
                <%= link_to book_favorites_path(@book), method: :post, class: "far fa-heart text-danger" do %>
                  <%= @book.favorites.count %><% end %>
              <% end %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger btn-sm" %></td>
          <% else %>
            <td colspan="2"></td>
          <% end %>
        </tbody>
      </table>
      <h3>Comments</h3>
      <div class="comments">
        <table class="table">
          <tbody>
            <% @book.comments.each do |comment| %>
            <tr>
              <td rowspan="2">
                <%= link_to user_path(comment.user) do %>
                  <%= attachment_image_tag comment.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpb" %><br><%= comment.user.name %>
                <% end %></td>
              <td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
              <td><% if comment.user == current_user %>
                    <%= link_to "Destroy", book_comment_path(comment.book, comment), method: :delete, class: "btn btn-secondary btn-sm", "data-confirm" => "Are you sure?" %>
                  <% end %></td>
            </tr>
            <tr>
              <td colspan="2"><%= comment.comment %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="post_comment", id="new_comment">
        <%= form_with(model: [@book, @comment], local: true) do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, rows: '3', placeholder: "comments here!", class: "form-control" %>
          </div>
          <div class="actions">
            <%= f.submit 'Post comments', class: "btn btn-warning btn-sm text-light" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>