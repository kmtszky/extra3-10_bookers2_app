<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <%= render 'layouts/error.messages', validation: @book %>
  <div class="row">
    <!--side bar-->
    <%= render 'layouts/sidebar', user: @user, book: @book %>
    <!--main-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="cell-sm"></th>
            <th class="cell-md">Title</th>
            <th class="cell-lg">Opinion</th>
            <th class="cell-sm"></th>
            <th class="cell-sm"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td class="cell-sm"><%= link_to user_path(book.user_id) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %><% end %>
              </td>
              <td class="cell-md"><%= link_to book.title, book_path(book.id) %></td>
              <td class="cell-lg"><%= book.body %></td>
              <td class="cell-sm"><i class="far fa-comment"></i> <%= book.comments.count %></td>
              <td class="cell-sm"><i class="fas fa-heart favorite text-danger"></i> <%= book.favorites.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>