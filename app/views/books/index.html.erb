<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <%= render 'layouts/error.messages', validation: @book %>
  <div class="row">
    <!--side bar-->
    <%= render 'layouts/sidebar', user: @user, book: @book %>
    <!--main-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to user_path(book.user_id) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %><% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td><% if book.favorited_by?(current_user) %>
                <%= link_to book_favorites_path(book), method: :delete, class: "fas fa-heart text-danger" do %>
                  <%= book.favorites.count %><% end %>
                <% else %>
                  <%= link_to book_favorites_path(book), method: :post, class: "fas fa-heart" do %>
                    <%= book.favorites.count %><% end %>
                <% end %></td>
              <td>コメント数: <%= book.comments.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>