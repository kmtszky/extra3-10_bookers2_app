<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <!--side bar-->
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image_id, :fill, 100, 100, fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <td><strong>name</strong></td>
            <td><strong><%= @user.name %></strong></td>
          </tr>
          <tr>
            <td><strong>introduction</strong></td>
            <td><strong><%= @user.introduction %></strong></td>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to edit_user_path(@user.id), class: "fas fa-user-cog btn btn-outline-secondary btn-block" do %>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local: true do |f| %>
        <div class="form-group">
          <%= f.label :title %><br />
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :opinion %><br />
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>
      <% end %>

    </div>
    <!--main-->
    <div class="col-md-8">
      <table class="table">
        <h2>Books</h2>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <td><%= attachment_image_tag book.user, :profile_image_id, :fill, 30, 30, fallback: "no_image.jpg" %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>